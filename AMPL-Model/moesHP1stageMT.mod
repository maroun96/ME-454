/*----------------------------------------------------------------------------------------------------
Set the minimum temperature of the boiler
---------------------------------------------------------------------------------------------------------------------------------------*/
let Tminheating['HP1stageMT'] := Theating['MediumT'] + dTmin;
/*---------------------------------------------------------------------------------------------------------------------------------------
Set the sink Temperature of HP
---------------------------------------------------------------------------------------------------------------------------------------*/
param T_sinkMT := Theating['MediumT'] + dTmin;
/*---------------------------------------------------------------------------------------------------------------------------------------
Set real COP of HP
---------------------------------------------------------------------------------------------------------------------------------------*/
param COP_HP1stageMT{t in Time} := (eff_Carnot*T_sinkMT)/(T_sinkMT - T_source[t]);
/*---------------------------------------------------------------------------------------------------------------------------------------
Set flow rate of electricity as a function of HP
---------------------------------------------------------------------------------------------------------------------------------------*/
subject to HPMT_elec{t in Time}:
	Flowin['Electricity','HP1stageMT'] * mult_t['HP1stageMT',t] = Qheatingsupply['HP1stageMT'] / COP_HP1stageMT[t];
